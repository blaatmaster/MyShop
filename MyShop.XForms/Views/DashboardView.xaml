<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyShop.XForms.Views.DashboardView"
             
            Title="{Binding Title}"
            Icon="{Binding Icon}">
  <ContentPage.ToolbarItems>
    <ToolbarItem Text="Action" />
  </ContentPage.ToolbarItems>
  <StackLayout VerticalOptions="StartAndExpand" Padding="10">
    <Label Text="Dashboard Item 1" FontSize="28"/>
    <Label Text="Dashboard Item 2" FontSize="28" />
    <Label Text="Dashboard Item 3" FontSize="28" />
  </StackLayout>
</ContentPage>